{
  "name": "remix-tailwind-threejs-template",
  "author": "@ansonlichtfuss",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/app.css -o ./app/tailwind.css --minify",
    "typecheck": "tsc -b",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/app.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@react-three/fiber": "^7.0.26",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/vercel": "1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "1.1.3",
    "three": "^0.137.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/three": "^0.137.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.22",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
